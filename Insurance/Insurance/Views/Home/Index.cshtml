            <div class="form-group col-md-2">
                <h5>Đơn vị tính: Đồng</h5>
            </div>
        </div>
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a></li>
            <li role="presentation"><a href="#infor" aria-controls="infor" role="tab" data-toggle="tab">Information</a></li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="profile">
                <table id="grid_profile" class="table table-striped table-bordered display" cellspacing="0" style="width:100%">
                    <thead class="text-black" style="background: #CCCCCC;">
                        <tr>
